enum Permission {
  SUBSCRIBER
  AUTHOR
  EDITOR
  TEAM_ADMIN
  ADMIN
}

enum ContentType {
  AUDIO
  VIDEO
  DOCUMENT
  IMAGE
  TEACHING_MATERIAL
}

enum VideoBurnedInStatus {
  SUBTITLED
  CAPTIONED
  CLEAN
}

enum VideoQuality {
  WEB
  BROADCAST
}

enum ImageQuality {
  WEB
  PRINT
}

enum ProjectPublishStatus {
  DRAFT
  PUBLISHED
  EMBARGOED
}

enum ProjectVisibility {
  INTERNAL
  PUBLIC
}

enum TextDirection {
  LTR
  RTL
}

enum ThumbnailSize {
  SMALL
  MEDIUM
  LARGE
  FULL
}

type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String
  tempToken: String
  tempTokenExpiry: Float
  jobTitle: String
  country: String
  city: String
  howHeard: String
  permissions: [Permission!]!
  team: Team
  isConfirmed: Boolean! @default(value: "false")
}

type Team {
  id: ID! @unique
  name: String! @unique
  organization: String!
  members: [User]
  contentTypes: [ContentType]
  isConfirmed: Boolean! @default(value: "false")
}

type Language {
  id: ID! @unique
  languageCode: String!
  locale: String! @unique
  textDirection: String! @default(value: LTR)
  displayName: String!
  nativeName: String!
}

# translations prop required as we need at least the English translation to create a category
type Category {
  id: ID! @unique
  translations: [LanguageTranslation!]!
}

# translations prop required as we need at least the English translation to create a category
type Tag {
  id: ID! @unique
  translations: [LanguageTranslation!]!
}

type LanguageTranslation {
  id: ID! @unique
  name: String!
  language: Language!
}

type Thumbnail {
  id: ID! @unique
  size: ThumbnailSize @default(value: FULL)
  image: ImageFile
}

type VideoProject {
  id: ID! @unique
  projectType: String! # How are the units related? LANGUAGE_TRANSLATION, SERIES, etc
  projectTitle: String!
  descPublic: String
  descInternal: String
  author: String
  team: Team
  status: ProjectPublishStatus @default(value: DRAFT)
  visibility: ProjectVisibility # what is default?
  units: [VideoUnit]
  supportFiles: [SupportFile]
  thumbnails: [ImageFile]
  categories: [Category]
  tags: [Tag]
}

type VideoUnit {
  id: ID! @unique
  language: Language
  title: String!
  descPublic: String
  files: [VideoFile]
  tags: [Tag]
  categories: [Category]
  thumbnails: [Thumbnail]
}

type VideoStream {
  id: ID! @unique
  site: String # You Tube, Vimeo
  url: String
  embedUrl: String # verify that this is needed
}

type Dimensions {
  id: ID! @unique
  width: Int
  height: Int
}

# Full video,promotional teaser, etc
type VideoUse {
  id: ID! @unique
  name: String!
}

# thumbnail/cover image, email graphic etc
type ImageUse {
  id: ID! @unique
  name: String!
}

type VideoFile {
  id: ID! @unique
  language: Language
  filetype: String
  filename: String
  use: VideoUse
  quality: VideoQuality
  videoBurnedInStatus: VideoBurnedInStatus
  url: String
  md5: String
  duration: Float
  bitrate: Float
  filesize: Float
  dimensions: Dimensions
  stream: VideoStream
}

type ImageFile {
  id: ID! @unique
  language: Language
  dimensions: Dimensions
  alt: String
  longdesc: String
  caption: String
  filename: String
  filetype: String
  md5: String
  url: String
}

type SupportFile {
  id: ID! @unique
  language: Language!
  url: String
  md5: String
  filename: String
  filetype: String # srt, pdf
  filesize: Float
}
